{% extends "./base.njk" %}

{% block body %}
<nav aria-label="breadcrumb" class="pt-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/server">Server</a></li>
        <li class="breadcrumb-item active" aria-current="page">Overview</li>
    </ol>
</nav>
<hr>

<div class="container-fluid pt-3">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <a class="btn btn-primary" href="/server/create"><i class="bi bi-plus-square"></i> Add new
                        server</a>
                    <hr>
                    <table class="table table-sm table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>IP</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for server in servers %}
                            <tr>
                                <td>{{server.name}}</td>
                                <td>{{server.ip}}</td>
                                <td><a class="btn btn-outline-primary btn-sm" href="/server/edit/{{server.id}}"><i
                                            class="bi bi-pencil-square"></i>
                                        Edit</button></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}